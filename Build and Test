pipeline{
  agent any
  environment{
  branch='master'
  }
  stages{
          stage('checkout git'){
            steps{
                 git url:'---------------'                      // use git scm url
                 sh 'git clean'; 
                                }
                  }             
          stage('build'){
            steps{
                  WithMaven(maven : 'maven version'){         // use maven version
                  sh'mvn clean package';
                        }
                     }   
                 }
            
          stage('UAT Test') {
            steps {
                    sh "UAT tests-${ENVIRONMENT}.sh"          //define Environment
                    }
                
                }            
          stage('SIT Tests') {
            steps {
                    sh "SIT tests-${ENVIRONMENT}.sh"          //define Environment
                   }
                   
            }
        }
    }
